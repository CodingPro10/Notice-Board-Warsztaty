{% extends 'base.html.twig' %}

{% block body %}
    <h1>Notice</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notice.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ notice.description }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ notice.title }}</td>
            </tr>
            <tr>
                <th>Picno</th>
                <td>{{ notice.picNo }}</td>
            </tr>
            <tr>
                <th>Exp_date</th>
                <td>{% if notice.expdate %}{{ notice.expdate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ notice.category }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('category_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('category_edit', { 'id': notice.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
